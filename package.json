{
  "name": "cate-desktop",
  "productName": "Cate",
  "version": "0.0.1",
  "description": "ESA CCI Toolbox (Cate)",
  "main": "app.js",
  "scripts": {
    "start": "electron app",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "typings install && install-app-deps",
    "build": "tsc",
    "release": "build --x64 --publish never"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScriptSamples.git"
  },
  "keywords": [
  ],
  "author": "Norman Fomferra (Brockmann Consult GmbH)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Microsoft/TypeScriptSamples/issues"
  },
  "homepage": "https://github.com/Microsoft/TypeScriptSamples",
  "devDependencies": {
    "electron-prebuilt": "1.4.5",
    "electron-builder": "latest",
    "react": "^0.13.3",
    "react-dom": "^0.13.3",

    "typescript": "^2.0.8",
    "typings": "^2.0.0"
  },
  "build": {
    "appId": "org.esa.ccitools.Cate",
    "app-category-type": "app.category.climate-science",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/resources/win32/cate-icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "app/resources/win32/cate-icon.ico"
    },
    "mac": {
      "icon": "app/resources/darwin/icon.icns"
    },
    "dmg": {
      "icon": "app/resources/darwin/icon.icns",
      "background": "resources/darwin/dmg-background.png"
    }
  }
}
