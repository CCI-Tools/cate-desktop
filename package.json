{
  "name": "cate-desktop",
  "productName": "Cate",
  "version": "0.0.1",
  "description": "ESA CCI Toolbox (Cate)",
  "private": true,
  "scripts": {
    "start": "electron app",
    "test:e2e": "mocha \"e2e/**/*-test.js\"",
    "pretest": "npm run compile",
    "test": "mocha \"app/main/**/*.spec.js\" \"app/renderer/**/*.spec.js\" \"app/common/**/*.spec.js\"",
    "postinstall": "install-app-deps",
    "compile": "tsc",
    "compile:trace": "tsc --traceResolution",
    "dist": "npm run clean && npm run compile && build --x64 --publish never",
    "pack": "npm run clean && npm run compile && build --x64 --publish never --dir",
    "clean": "rimraf app/main app/renderer app/common npm-debug.log",
    "clean:dist": "rimraf dist",
    "clean:all": "npm run clean && rimraf dist app/node_modules && npm prune"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CCI-Tools/cate-desktop.git"
  },
  "keywords": [
    "esa",
    "cci",
    "toolbox",
    "climate",
    "science"
  ],
  "author": "Norman Fomferra (Brockmann Consult GmbH)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CCI-Tools/cate-desktop/issues"
  },
  "homepage": "https://github.com/CCI-Tools/cate-desktop",
  "devDependencies": {
    "@blueprintjs/core": "^1.9",
    "@blueprintjs/table": "^1.6",
    "@types/chai": "^3.4",
    "@types/chai-as-promised": "^0.0",
    "@types/chai-enzyme": "^0.5",
    "@types/classnames": "0.0",
    "@types/deep-equal": "0.0",
    "@types/dom4": "^1.5",
    "@types/electron": "^1.4",
    "@types/electron-devtools-installer": "^2.0",
    "@types/enzyme": "^2.5",
    "@types/mocha": "^2.2",
    "@types/oboe": "^2.0.28",
    "@types/openlayers": "^3.20",
    "@types/proj4": "^2.3.3",
    "@types/react": "^0.14",
    "@types/react-addons-test-utils": "^0.14",
    "@types/react-dom": "^0.14",
    "@types/react-redux": "^4.4",
    "@types/redux-logger": "^2.6",
    "@types/reselect": "^2.0",
    "@types/tether": "^1.1",
    "cesium": "^1.30",
    "chai": "^3.5",
    "chai-as-promised": "^6.0",
    "chai-enzyme": "^0.6",
    "classnames": "^2.2",
    "deep-equal": "^1.0",
    "electron": "1.4",
    "electron-builder": "^15.4",
    "electron-devtools-installer": "^2.1",
    "enzyme": "^2.6",
    "mocha": "^3.2",
    "oboe": "^2.1.3",
    "openlayers": "^4.0",
    "proj4": "^2.4",
    "react": "^15.4",
    "react-addons-css-transition-group": "^15.4",
    "react-addons-perf": "^15.4",
    "react-addons-test-utils": "^15.4",
    "react-dom": "^15.4",
    "react-redux": "^4.4",
    "redux": "^3.6",
    "redux-logger": "^2.7",
    "redux-thunk": "^2.1",
    "reselect": "^2.5",
    "rimraf": "^2.5",
    "spectron": "^3.4",
    "ts-node": "^1.7",
    "typescript": "^2.1"
  },
  "build": {
    "appId": "org.esa.ccitools.Cate",
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": true
    },
    "mac": {
      "category": "app.category.climate-science"
    },
    "dmg": {
      "background": "app/resources/darwin/dmg-background.png"
    }
  }

}
