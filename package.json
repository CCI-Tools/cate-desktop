{
  "name": "cate-desktop",
  "productName": "Cate Desktop",
  "version": "0.9.0-dev.4",
  "description": "A graphical user interface for the ESA CCI Toolbox (Cate)",
  "private": true,
  "scripts": {
    "start": "electron app",
    "test:e2e": "mocha \"e2e/**/*-test.js\"",
    "pretest": "npm run compile",
    "test": "mocha \"app/main/**/*.spec.js\" \"app/renderer/**/*.spec.js\" \"app/common/**/*.spec.js\"",
    "postinstall": "install-app-deps",
    "compile": "tsc",
    "compile:trace": "tsc --traceResolution",
    "dist": "npm run clean && npm run compile && build --x64 --publish never",
    "pack": "npm run clean && npm run compile && build --x64 --publish never --dir",
    "clean": "rimraf app/main app/renderer app/common npm-debug.log",
    "clean:dist": "rimraf dist",
    "clean:all": "npm run clean && rimraf dist app/node_modules && npm prune"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CCI-Tools/cate-desktop.git"
  },
  "keywords": [
    "esa",
    "cci",
    "toolbox",
    "climate",
    "science"
  ],
  "author": "CCI Toolbox (Cate) Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CCI-Tools/cate-desktop/issues"
  },
  "homepage": "https://github.com/CCI-Tools/cate-desktop",
  "devDependencies": {
    "@blueprintjs/core": "~1.20.x",
    "@blueprintjs/datetime": "~1.17.x",
    "@blueprintjs/table": "~1.17.x",
    "@types/chai": "~3.4.x",
    "@types/chai-as-promised": "~0.0.x",
    "@types/chai-enzyme": "~0.5.x",
    "@types/classnames": "0.0.x",
    "@types/d3": "~4.7.0",
    "@types/deep-equal": "0.0.x",
    "@types/dom4": "~1.5.x",
    "@types/electron-devtools-installer": "~2.0.x",
    "@types/enzyme": "~2.5.x",
    "@types/geojson": "~1.0.2",
    "@types/mocha": "~2.2.x",
    "@types/oboe": "~2.0.28",
    "@types/openlayers": "~3.20.x",
    "@types/proj4": "~2.3.x",
    "@types/react": "~15.0.x",
    "@types/react-dom": "~15.5.x",
    "@types/redux-logger": "~3.0.x",
    "@types/react-redux": "~4.4.x",
    "@types/react-test-renderer": "~15.5.x",
    "@types/reselect": "~2.0.x",
    "@types/tether": "~1.1.x",
    "cesium": "~1.34.x",
    "chai": "~3.5.x",
    "chai-as-promised": "~6.0.x",
    "chai-enzyme": "~0.6.x",
    "classnames": "~2.2.x",
    "d3": "~3.5.x",
    "deep-equal": "~1.0.x",
    "electron": "1.6.11",
    "electron-builder": "~17.10.x",
    "electron-devtools-installer": "~2.2.x",
    "enzyme": "~2.6.x",
    "mocha": "~3.2.x",
    "oboe": "~2.1.x",
    "openlayers": "~4.2.x",
    "proj4": "~2.4.x",
    "react": "~15.6.x",
    "react-addons-css-transition-group": "~15.6.x",
    "react-addons-perf": "~15.4.x",
    "react-dom": "~15.6.x",
    "react-redux": "~5.0.x",
    "react-test-renderer": "~15.6.x",
    "redux": "~3.7.x",
    "redux-logger": "~3.0.x",
    "redux-thunk": "~2.2.x",
    "reselect": "~2.5.x",
    "rimraf": "~2.5.x",
    "semver": "^5.3.0",
    "spectron": "~3.4.x",
    "ts-node": "~3.0.x",
    "typescript": "~2.3.x"
  },
  "build": {
    "appId": "org.esa.ccitools.Cate",
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "app/resources/win32/cate-icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "app/resources/win32/cate-icon.ico"
    },
    "mac": {
      "icon": "app/resources/darwin/icon.icns",
      "category": "app.category.climate-science"
    },
    "dmg": {
      "icon": "app/resources/darwin/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
