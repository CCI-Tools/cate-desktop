{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": true,
    "isolatedModules": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./app",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "sourceRoot": "./src",
    "strict": false,
    "target": "ES6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "mocha",
      "chai"
    ]
  },
  "include": [
    "src"
  ]
}
