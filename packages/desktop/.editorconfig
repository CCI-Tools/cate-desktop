# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{ts,tsx,jsx,js,py}]
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[Makefile]
indent_style = tab

[*{.json,.yml}]
indent_style = spaces
indent_size = 2
